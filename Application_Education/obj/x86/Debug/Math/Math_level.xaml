<Page
    x:Class="Application_Education.Math.Math_level"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Application_Education.Math"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="256*"/>
            <ColumnDefinition Width="151*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="203*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="125*"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="89*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///im/math1.png"/>
        </Grid.Background>
        <Button x:ConnectionId='1' x:Name="button" Content="EASY" Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,10,18,10" Grid.Row="1" VerticalAlignment="Stretch" d:LayoutOverrides="TopMargin, BottomMargin" Background="#FF1DFF00" BorderBrush="White" Foreground="White" FontFamily="Showcard Gothic" FontSize="32"/>
        <Button x:ConnectionId='2' x:Name="button1" Content="MEDIUM" Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,10,18,10" Grid.Row="3" VerticalAlignment="Stretch" d:LayoutOverrides="TopMargin, BottomMargin" Background="#FF23B4FF" BorderBrush="White" Foreground="White" FontFamily="Showcard Gothic" FontSize="32"/>
        <Button x:ConnectionId='3' x:Name="button2" Content="HARD" Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,10,18,10" Grid.Row="5" VerticalAlignment="Stretch" d:LayoutOverrides="TopMargin, BottomMargin" Background="#FFFF0006" BorderBrush="White" Foreground="White" FontSize="32" FontFamily="Showcard Gothic"/>

    </Grid>
</Page>

