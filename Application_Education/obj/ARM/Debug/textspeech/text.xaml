<Page
    x:Class="Application_Education.textspeech.text"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Application_Education.textspeech"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="68*"/>
            <ColumnDefinition Width="207*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="179*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="84*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="52*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///im/text1_BG.png"/>
        </Grid.Background>
        <Button x:ConnectionId='1' x:Name="button" Content="SEND" Grid.Column="5" HorizontalAlignment="Stretch" Margin="10,5" Grid.Row="3" VerticalAlignment="Stretch" Background="#FFFF0034" BorderBrush="White" Foreground="White" FontSize="24" FontFamily="Segoe UI Black" FontWeight="Bold" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin"                     />
        <TextBox x:ConnectionId='2' x:Name="txt_speed" Grid.Column="3" Margin="10,10,10,-9" Grid.Row="3" TextWrapping="Wrap" Text="Enter the Word" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin, TopPosition, BottomPosition" FontSize="26.667" BorderBrush="{x:Null}" Background="{x:Null}"/>
        <TextBlock x:ConnectionId='3' x:Name="tb1_speed" Grid.Column="3" Margin="10" Grid.Row="5" TextWrapping="Wrap" Text="" FontSize="48" TextAlignment="Center" FontWeight="Bold" FontFamily="Segoe UI Black" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin"/>
        <MediaElement x:ConnectionId='4' x:Name="media" Margin="0,0,29,35" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="2" VerticalAlignment="Bottom" d:LayoutOverrides="TopMargin, BottomMargin">
            <MediaElement.RenderTransform>
                <CompositeTransform ScaleX="-1"/>
            </MediaElement.RenderTransform>
        </MediaElement>
        <Button x:ConnectionId='5' x:Name="button1" Content="HOME" Grid.Column="1" HorizontalAlignment="Stretch" Margin="10" Grid.Row="1" VerticalAlignment="Stretch" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" Background="#FFFF1D00" BorderBrush="White" Foreground="White" FontSize="18.667" FontFamily="Segoe UI Black" FontWeight="Bold"                      />

    </Grid>
</Page>

